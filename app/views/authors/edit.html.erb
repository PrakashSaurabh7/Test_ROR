<h1>Edit Author</h1>
<%= form_with model: @author, url: "/author/update/#{@author.id}", method: :patch, local: true, data: {turbo: false} do |f|%>
    <p>
        <%= f.label "First Name"%>
        <%= f.text_field :first_name%>
    </p>
    <p>
        <%= f.label "Last Name"%>
        <%= f.text_field :last_name%>
    </p>
    <p>
        <%= f.label "Date of Birth"%>
        <%= f.text_field :date_of_birth%>
    </p>
    <p>
        <%= f.submit "Update Author Details"%>
    </p>
<%end%>